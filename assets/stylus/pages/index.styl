.willings {
    &-wrapper {
        padding 20px
    }
    &-header {
        display flex
        justify-content stretch
        
        .app-button-primary {
            width 100% !important
        }
    }
    &-cards-container {
        display flex
        flex-wrap wrap
        justify-content center
        gap 20px
        padding 20px
    }
    &-card {
        &-container {
            padding 20px
            border 1px solid #ccc
            border-radius 18px
            width max-content
        }
    }
    &-result {
        &-title {
            font-size 24px
            font-weight 900
            text-align center
            margin-bottom 50px
        }
        display flex
        justify-content center
        
        &-card {
            font-size 18px
            font-weight 600
            transform scale(2)
        }
    }
}